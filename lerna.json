{
  "packages": ["packages/hooks", "packages/components/*", "packages/components"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": ["master", "kill-rollup"],
      "changelogPreset": "conventional-changelog-conventionalcommits"
    },
    "publish": {
      "message": "chore(release): обновление версий пакетов",
      "registry": "https://npm.pkg.github.com/ttteam-org"
    }
  },
  "ignoreChanges": [
    "docs/**",
    "scripts/**",
    ".storybook/**",
    "**/__tests__/**",
    "**/*.md",
    "**/*.mdx",
    "**/*.test.*",
    "**/*.stories.*"
  ],
  "changelog": {
    "mainPackage": "@ttteam-org/vega-ui",
    "labels": {
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "internal": ":house: Internal",
      "breaking change": ":boom: Breaking Change"
    },
    "repo": "ttteam-org/ttteam-vega-ui"
  }
}
