{
  "name": "vega-ui",
  "version": "0.0.1",
  "main": "index.js",
  "author": "csssr",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^12.16.2",
    "yarn": "^1.22.4"
  },
  "scripts": {
    "test": "jest --runInBand",
    "coverage": "jest --all --coverage",
    "test:watch": "jest --runInBand --watch",
    "diff": "lerna diff",
    "bootstrap": "lerna bootstrap",
    "update:version": "lerna version --conventional-commits --no-push",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -s ./.storybook/static",
    "link:packages": "lerna link",
    "build": "node ./scripts/build.js",
    "types": "tsc --project . --noEmit",
    "types:watch": "yarn types --watch --preserveWatchOutput",
    "prettier": "prettier --write ./**/*.{ts,tsx,css,js,jsx}",
    "lint": "yarn run lint:ts && yarn run lint:css",
    "lint:ts:": "eslint --ext=.ts,.tsx .",
    "lint:ts:fix": "eslint --ext=.ts,.tsx . --fix",
    "lint:css": "stylelint ./packages",
    "lint:css:fix": "stylelint ./packages --fix",
    "lint:fix": "yarn run lint:ts:fix && yarn run lint:css:fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./commitizen.js"
    }
  },
  "workspaces": [
    "packages/hooks",
    "packages/components/avatar",
    "packages/components/badge",
    "packages/components/button",
    "packages/components/checkbox",
    "packages/components/choice-group",
    "packages/components/file",
    "packages/components/icons",
    "packages/components/radio",
    "packages/components/switch",
    "packages/components/text",
    "packages/components/text-field",
    "packages/components/user",
    "packages/components/modal",
    "packages/components/dropdown"
  ],
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-knobs": "^5.3.17",
    "@storybook/addon-links": "^5.3.18",
    "@testing-library/jest-dom": "^5.5.0",
    "@storybook/react": "^5.3.18",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "@testing-library/react": "^10.0.3",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.0.4",
    "husky": "^4.2.5",
    "cz-customizable": "^6.2.0",
    "css-loader": "^3.5.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "lerna": "^3.20.2",
    "postcss-css-variables": "^0.14.0",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.2.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "regenerator-runtime": "^0.13.5",
    "rollup": "^2.7.2",
    "jest": "^25.4.0",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-typescript2": "^0.27.0",
    "lint-staged": "^10.1.7",
    "storybook-addon-performance": "^0.9.0",
    "storybook-addon-themes": "^5.2.0",
    "style-loader": "^1.1.4",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-prettier": "^1.1.2",
    "ts-loader": "^7.0.1",
    "ts-jest": "^25.4.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1"
  },
  "dependencies": {
    "@gpn-design/uikit": "^1.0.2",
    "react": "^16.13.1",
    "bem-cn": "^3.0.1"
  }
}
